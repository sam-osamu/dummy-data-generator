{
  "compilerOptions": {
    "target": "ES6",
    "module": "umd",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "es2015.collection"
    ]
  },
  "include": [
    "src/main/ts/**/*.ts",
    "src/main/vue/**/*.vue"
  ],
  "exclude": [
    "node_modules/**"
  ]
}